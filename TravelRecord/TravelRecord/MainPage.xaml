<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TravelRecord.MainPage">

    <StackLayout BackgroundColor="Green">
        <Entry x:Name="Username" Placeholder="Username" Keyboard="Email"/>
        <Entry x:Name="Password" Placeholder="Password" IsPassword="True"/>
        <Button x:Name="LoginButton" Text="Login" Clicked="LoginButton_OnClicked"/>
        <Button x:Name="SignUpButton" Text="Sign Up" Clicked="SignUpButton_OnClicked"/>
    </StackLayout>

</ContentPage>
